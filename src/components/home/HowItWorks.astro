---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import Heading from '../ui/Heading.astro';

const steps = [
  {
    number: '1',
    title: 'Connect PostHog',
    description:
      'Link your PostHog instance. Beton reads your product analytics events â€” no data export needed.',
    icon: 'M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m9.86-2.44a4.5 4.5 0 00-1.242-7.244l-4.5-4.5a4.5 4.5 0 00-6.364 6.364L4.25 8.25',
  },
  {
    number: '2',
    title: 'Detect Signals',
    description:
      'Beton automatically discovers behavioral patterns that indicate buying intent, expansion, or churn risk.',
    icon: 'M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z',
  },
  {
    number: '3',
    title: 'Route to CRM',
    description:
      'Signals are automatically routed to Attio, HubSpot, Zoho, Pipedrive, webhooks, or n8n for timely action.',
    icon: 'M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5',
  },
];
---

<Section id="how-it-works">
  <Container>
    <div class="text-center mb-12 lg:mb-16">
      <Heading as="h2">How It Works</Heading>
      <p class="mt-4 text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
        Three steps from product data to revenue action.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      {steps.map((step) => (
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-[var(--color-primary-50)] text-[var(--color-primary-600)] mb-4">
            <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d={step.icon}></path>
            </svg>
          </div>
          <div class="text-sm font-mono text-[var(--color-primary-500)] mb-2">Step {step.number}</div>
          <h3 class="text-lg font-[family-name:var(--font-heading)] mb-2">{step.title}</h3>
          <p class="text-[var(--color-text-secondary)] text-sm leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>
  </Container>
</Section>
