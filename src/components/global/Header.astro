---
import { mainNav, externalNav } from '../../utils/navigation';
import ThemeToggle from './ThemeToggle.astro';
import { SITE } from '../../utils/site';

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-30 w-full border-b-2 border-[var(--color-text)] bg-[var(--color-surface)]">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 text-lg font-bold font-[family-name:'JetBrains_Mono']">
        <svg width="28" height="28" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path d="M246.5 220C246.5 220 230 150 280 110C330 70 410 130 380 180C350 230 280 200 280 200L250 235" stroke="currentColor" stroke-width="45" stroke-linecap="round"/>
          <path d="M110 320L210 240L390 310L290 390L110 320Z" fill="currentColor"/>
          <path d="M110 335L110 375L290 445L290 405L110 335Z" fill="currentColor"/>
        </svg>
        Beton
      </a>

      <!-- Desktop nav -->
      <nav class="hidden lg:flex items-center gap-0.5" aria-label="Main navigation">
        {mainNav.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-2.5 py-2 text-sm font-medium whitespace-nowrap',
              currentPath === link.href || currentPath.startsWith(link.href + '/')
                ? 'text-[var(--color-primary-600)] bg-[var(--color-primary-bg)]'
                : 'text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:bg-[var(--color-surface-overlay)]',
            ]}
            aria-current={currentPath === link.href ? 'page' : undefined}
          >
            {link.label}
          </a>
        ))}

        <span class="mx-1.5 h-5 w-px bg-[var(--color-border)]" aria-hidden="true"></span>

        {externalNav.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 px-2.5 py-2 text-sm font-medium whitespace-nowrap text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
          >
            {link.label === 'GitHub' && (
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
              </svg>
            )}
            {link.label}
            {link.label !== 'GitHub' && (
              <svg class="w-3.5 h-3.5 opacity-50" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
              </svg>
            )}
          </a>
        ))}
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-2">
        <ThemeToggle />

        <!-- Desktop CTAs -->
        <a
          href="https://cal.com/beton/thanks-for-your-interest-in-beton"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden lg:inline-flex items-center px-3 py-2 text-sm font-bold whitespace-nowrap border-2 border-[var(--color-text)] text-[var(--color-text)] hover:bg-[var(--color-text)] hover:text-[var(--color-surface)] uppercase tracking-wider"
          data-track-cta="header-book-demo"
        >
          Book a Demo
        </a>
        <a
          href={SITE.external.app}
          class="hidden lg:inline-flex items-center px-3 py-2 text-sm font-bold whitespace-nowrap bg-[var(--color-primary-600)] text-white border-2 border-[var(--color-primary-600)] hover:bg-white hover:text-[var(--color-primary-600)] uppercase tracking-wider"
          data-track-cta="header-get-started"
        >
          Get Started
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-open"
          type="button"
          class="inline-flex items-center justify-center w-9 h-9 text-[var(--color-text-secondary)] hover:text-[var(--color-text)] lg:hidden"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
