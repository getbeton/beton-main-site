---
import { footerNav, socialLinks } from '../../utils/navigation';
import { SITE } from '../../utils/site';

const year = new Date().getFullYear();
---

<footer class="border-t-2 border-[var(--color-text)] bg-[var(--color-surface)]">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-4 lg:col-span-2">
        <a href="/" class="inline-flex items-center gap-2 text-lg font-bold font-[family-name:'JetBrains_Mono']">
          <svg width="24" height="24" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M246.5 220C246.5 220 230 150 280 110C330 70 410 130 380 180C350 230 280 200 280 200L250 235" stroke="currentColor" stroke-width="45" stroke-linecap="round"/>
            <path d="M110 320L210 240L390 310L290 390L110 320Z" fill="currentColor"/>
            <path d="M110 335L110 375L290 445L290 405L110 335Z" fill="currentColor"/>
          </svg>
          Beton
        </a>
        <p class="mt-3 text-sm text-[var(--color-text-secondary)] max-w-xs">
          Open-source revenue intelligence. Detect behavioral signals in product usage and route them to your CRM.
        </p>
        <!-- Social links -->
        <div class="flex items-center gap-3 mt-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-text-tertiary)] hover:text-[var(--color-text-secondary)]"
              aria-label={link.label}
            >
              {link.icon === 'github' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                </svg>
              )}
              {link.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Product -->
      <div>
        <h3 class="text-sm font-semibold text-[var(--color-text)]">Product</h3>
        <ul class="mt-3 space-y-2">
          {footerNav.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold text-[var(--color-text)]">Company</h3>
        <ul class="mt-3 space-y-2">
          {footerNav.company.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-sm font-semibold text-[var(--color-text)]">Resources</h3>
        <ul class="mt-3 space-y-2">
          {footerNav.resources.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Comparisons -->
      <div>
        <h3 class="text-sm font-semibold text-[var(--color-text)]">Comparisons</h3>
        <ul class="mt-3 space-y-2">
          {footerNav.comparisons.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t-2 border-[var(--color-text)] flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-4">
        <p class="text-sm text-[var(--color-text-tertiary)]">
          &copy; {year} {SITE.entity}. All rights reserved.
        </p>
        <span class="hidden sm:inline text-[var(--color-text-tertiary)]">&middot;</span>
        <a href="https://ostr.io" class="text-sm text-[var(--color-text-tertiary)] hover:text-[var(--color-text-secondary)]">
          Powered by ostr.io â€” SEO middleware
        </a>
      </div>
      <div class="flex items-center gap-4">
        {footerNav.legal.map((link) => (
          <a
            href={link.href}
            class="text-sm text-[var(--color-text-tertiary)] hover:text-[var(--color-text-secondary)]"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
