---
import { mainNav, externalNav } from '../../utils/navigation';

const currentPath = Astro.url.pathname;
---

<div
  id="mobile-menu"
  class="hidden fixed inset-0 z-40 lg:hidden"
  role="dialog"
  aria-modal="true"
  aria-label="Navigation menu"
>
  <!-- Backdrop -->
  <div id="mobile-menu-backdrop" class="fixed inset-0 bg-black/70"></div>

  <!-- Panel -->
  <div class="fixed inset-y-0 right-0 w-full max-w-sm bg-[var(--color-surface-raised)] border-l-2 border-[var(--color-text)] p-6 overflow-y-auto">
    <div class="flex items-center justify-between mb-8">
      <a href="/" class="text-lg font-bold font-[family-name:'JetBrains_Mono']">Beton</a>
      <button
        id="mobile-menu-close"
        type="button"
        class="inline-flex items-center justify-center w-9 h-9 text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
        aria-label="Close menu"
      >
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <nav class="space-y-1">
      {mainNav.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-3 py-2 text-base font-medium',
            currentPath === link.href || currentPath.startsWith(link.href + '/')
              ? 'bg-[var(--color-primary-bg)] text-[var(--color-primary-700)]'
              : 'text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:bg-[var(--color-surface-overlay)]',
          ]}
          aria-current={currentPath === link.href ? 'page' : undefined}
        >
          {link.label}
        </a>
      ))}

      <div class="border-t border-[var(--color-border)] my-4"></div>

      {externalNav.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-3 py-2 text-base font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text)] hover:bg-[var(--color-surface-overlay)]"
        >
          {link.label === 'GitHub' && (
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
            </svg>
          )}
          {link.label}
          {link.label !== 'GitHub' && (
            <svg class="w-4 h-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
            </svg>
          )}
        </a>
      ))}
    </nav>

    <div class="mt-8 space-y-3">
      <a
        href="https://cal.com/beton/thanks-for-your-interest-in-beton"
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full text-center px-4 py-2.5 border-2 border-[var(--color-text)] text-[var(--color-text)] font-bold hover:bg-[var(--color-text)] hover:text-[var(--color-surface)] uppercase tracking-wider"
        data-track-cta="mobile-book-demo"
      >
        Book a Demo
      </a>
      <a
        href="https://inspector.getbeton.ai"
        class="block w-full text-center px-4 py-2.5 bg-[var(--color-primary-600)] text-white border-2 border-[var(--color-primary-600)] font-bold hover:bg-white hover:text-[var(--color-primary-600)] uppercase tracking-wider"
        data-track-cta="mobile-get-started"
      >
        Get Started
      </a>
    </div>
  </div>
</div>

<script is:inline>
(function () {
  var menu = document.getElementById('mobile-menu');
  var openBtn = document.getElementById('mobile-menu-open');
  var closeBtn = document.getElementById('mobile-menu-close');
  var backdrop = document.getElementById('mobile-menu-backdrop');
  if (!menu || !openBtn) return;

  function open() { menu.classList.remove('hidden'); document.body.style.overflow = 'hidden'; }
  function close() { menu.classList.add('hidden'); document.body.style.overflow = ''; }

  openBtn.addEventListener('click', open);
  if (closeBtn) closeBtn.addEventListener('click', close);
  if (backdrop) backdrop.addEventListener('click', close);
  document.addEventListener('keydown', function (e) { if (e.key === 'Escape') close(); });
})();
</script>
