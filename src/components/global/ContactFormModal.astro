<div
  id="contact-modal"
  class="hidden fixed inset-0 z-50"
  role="dialog"
  aria-modal="true"
  aria-label="Book a Demo"
>
  <!-- Backdrop -->
  <div id="contact-modal-backdrop" class="fixed inset-0 bg-black/70"></div>

  <!-- Panel -->
  <div class="fixed inset-0 flex items-center justify-center p-4">
    <div class="relative w-full max-w-md bg-[var(--color-surface-raised)] border-2 border-[var(--color-text)] shadow-[var(--shadow-card)] p-6 sm:p-8">
      <button
        id="contact-modal-close"
        type="button"
        class="absolute top-4 right-4 text-[var(--color-text-secondary)] hover:text-[var(--color-text)]"
        aria-label="Close"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="text-xl font-[family-name:var(--font-heading)] tracking-wide mb-1">Book a Demo</h2>
      <p class="text-sm text-[var(--color-text-secondary)] mb-6">Tell us about your needs and we'll get back to you within 24 hours.</p>

      <form id="contact-form" class="space-y-4">
        <div>
          <label for="contact-name" class="block text-sm font-medium mb-1">Name</label>
          <input
            type="text"
            id="contact-name"
            name="name"
            required
            class="w-full px-3 py-2 text-sm border-2 border-[var(--color-text)] bg-[var(--color-surface)] text-[var(--color-text)] placeholder:text-[var(--color-text-tertiary)] focus:outline-none focus:border-[var(--color-primary-500)]"
            placeholder="Your name"
          />
        </div>
        <div>
          <label for="contact-email" class="block text-sm font-medium mb-1">Work Email</label>
          <input
            type="email"
            id="contact-email"
            name="email"
            required
            class="w-full px-3 py-2 text-sm border-2 border-[var(--color-text)] bg-[var(--color-surface)] text-[var(--color-text)] placeholder:text-[var(--color-text-tertiary)] focus:outline-none focus:border-[var(--color-primary-500)]"
            placeholder="you@company.com"
          />
        </div>
        <div>
          <label for="contact-company" class="block text-sm font-medium mb-1">Company</label>
          <input
            type="text"
            id="contact-company"
            name="company"
            class="w-full px-3 py-2 text-sm border-2 border-[var(--color-text)] bg-[var(--color-surface)] text-[var(--color-text)] placeholder:text-[var(--color-text-tertiary)] focus:outline-none focus:border-[var(--color-primary-500)]"
            placeholder="Company name"
          />
        </div>
        <div>
          <label for="contact-message" class="block text-sm font-medium mb-1">Message</label>
          <textarea
            id="contact-message"
            name="message"
            rows="3"
            class="w-full px-3 py-2 text-sm border-2 border-[var(--color-text)] bg-[var(--color-surface)] text-[var(--color-text)] placeholder:text-[var(--color-text-tertiary)] focus:outline-none focus:border-[var(--color-primary-500)] resize-none"
            placeholder="Tell us about your use case..."
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full px-4 py-2.5 text-sm font-bold uppercase tracking-wider bg-[var(--color-primary-600)] text-white border-2 border-[var(--color-primary-600)] hover:bg-white hover:text-[var(--color-primary-600)]"
        >
          Send Message
        </button>
      </form>

      <div id="contact-success" class="hidden text-center py-8">
        <svg class="w-12 h-12 text-[var(--color-accent-500)] mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-lg font-semibold mb-1">Thank you!</h3>
        <p class="text-sm text-[var(--color-text-secondary)]">We'll be in touch soon.</p>
      </div>
    </div>
  </div>
</div>

<script is:inline>
(function () {
  var modal = document.getElementById('contact-modal');
  var backdrop = document.getElementById('contact-modal-backdrop');
  var closeBtn = document.getElementById('contact-modal-close');
  var form = document.getElementById('contact-form');
  var successMsg = document.getElementById('contact-success');

  function openModal() {
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Open from header button
  var headerBtn = document.getElementById('contact-sales-btn');
  if (headerBtn) headerBtn.addEventListener('click', openModal);

  // Open from mobile menu button
  var mobileBtn = document.getElementById('mobile-contact-sales-btn');
  if (mobileBtn) mobileBtn.addEventListener('click', function () {
    // Close mobile menu first
    var mobileMenu = document.getElementById('mobile-menu');
    if (mobileMenu) { mobileMenu.classList.add('hidden'); document.body.style.overflow = ''; }
    openModal();
  });

  // Open from any element with data-open-contact attribute
  document.querySelectorAll('[data-open-contact]').forEach(function (el) {
    el.addEventListener('click', function (e) {
      e.preventDefault();
      openModal();
    });
  });

  if (closeBtn) closeBtn.addEventListener('click', closeModal);
  if (backdrop) backdrop.addEventListener('click', closeModal);
  document.addEventListener('keydown', function (e) { if (e.key === 'Escape') closeModal(); });

  // Form submission â€” sends mailto for now
  if (form) {
    form.addEventListener('submit', function (e) {
      e.preventDefault();
      var name = document.getElementById('contact-name').value;
      var email = document.getElementById('contact-email').value;
      var company = document.getElementById('contact-company').value;
      var message = document.getElementById('contact-message').value;

      var subject = 'Sales inquiry from ' + name + (company ? ' (' + company + ')' : '');
      var body = 'Name: ' + name + '\nEmail: ' + email + '\nCompany: ' + company + '\n\n' + message;
      window.location.href = 'mailto:sales@getbeton.ai?subject=' + encodeURIComponent(subject) + '&body=' + encodeURIComponent(body);

      form.classList.add('hidden');
      successMsg.classList.remove('hidden');
    });
  }
})();
</script>
