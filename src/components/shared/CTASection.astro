---
import Container from '../ui/Container.astro';

interface Props {
  headline: string;
  description?: string;
  primaryCta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  trackId?: string;
}

const {
  headline,
  description,
  primaryCta = { label: 'Get Started Free', href: 'https://inspector.getbeton.ai' },
  secondaryCta = { label: 'Book a Demo', href: 'https://cal.com/beton/thanks-for-your-interest-in-beton' },
  trackId = 'cta-section',
} = Astro.props;

const isGitHubLink = secondaryCta.href.includes('github.com');
---

<section class="py-10 lg:py-16 bg-[var(--color-primary-600)] border-y-4 border-[var(--color-text)]" data-track-section={trackId}>
  <Container>
    <div class="text-center max-w-2xl mx-auto">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-[family-name:var(--font-heading)] tracking-wide text-white">
        {headline}
      </h2>
      {description && (
        <p class="mt-4 text-lg text-white/80">
          {description}
        </p>
      )}
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
        <a
          href={primaryCta.href}
          class="inline-flex items-center px-6 py-3 text-base font-bold uppercase tracking-wider bg-white text-[var(--color-primary-700)] border-2 border-white hover:bg-[var(--color-primary-700)] hover:text-white transition-all duration-150"
          data-track-cta={`${trackId}-primary`}
        >
          {primaryCta.label}
        </a>
        <a
          href={secondaryCta.href}
          class="inline-flex items-center px-6 py-3 text-base font-bold uppercase tracking-wider text-white border-2 border-white hover:bg-white hover:text-[var(--color-primary-700)] transition-all duration-150"
          data-track-cta={`${trackId}-secondary`}
          target={isGitHubLink ? '_blank' : undefined}
          rel={isGitHubLink ? 'noopener noreferrer' : undefined}
        >
          {isGitHubLink && (
            <svg class="w-5 h-5 mr-1.5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path></svg>
          )}
          {secondaryCta.label}
        </a>
      </div>
    </div>
  </Container>
</section>
