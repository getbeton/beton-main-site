---
interface Props {
  addon: {
    name: string;
    price: string;
    description: string;
    icon?: string;
  };
}

const { addon } = Astro.props;
---

<div class="flex items-start gap-4 p-4 rounded-xl border border-[var(--color-border)] bg-[var(--color-surface-raised)]">
  <div class="shrink-0 w-10 h-10 rounded-lg bg-[var(--color-neutral-100)] flex items-center justify-center text-[var(--color-text-secondary)]">
    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path>
    </svg>
  </div>
  <div class="flex-1">
    <div class="flex items-baseline justify-between gap-2">
      <h3 class="text-sm font-semibold">{addon.name}</h3>
      <span class="text-sm font-medium text-[var(--color-text-secondary)]">{addon.price}</span>
    </div>
    <p class="text-sm text-[var(--color-text-secondary)] mt-1">{addon.description}</p>
  </div>
</div>
