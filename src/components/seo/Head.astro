---
import { buildTitle, buildCanonicalUrl, buildOgImageUrl } from '../../utils/seo';
import { SITE } from '../../utils/site';
import OpenGraph from './OpenGraph.astro';
import SchemaOrg from './SchemaOrg.astro';
import GTM from '../analytics/GTM.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalPath?: string;
  noIndex?: boolean;
  type?: 'website' | 'article';
  schemaType?: string;
  faqData?: { question: string; answer: string }[];
  breadcrumbs?: { name: string; url: string }[];
  reviewData?: { name: string; role?: string; company?: string; quote: string }[];
  personData?: { name: string; role: string; bio?: string; social?: { twitter?: string; linkedin?: string; github?: string } }[];
}

const {
  title,
  description = SITE.description,
  ogImage,
  canonicalPath = Astro.url.pathname,
  noIndex = false,
  type = 'website',
  schemaType,
  faqData,
  breadcrumbs,
  reviewData,
  personData,
} = Astro.props;

const pageTitle = buildTitle(title);
const canonicalUrl = buildCanonicalUrl(canonicalPath);
const ogImageUrl = buildOgImageUrl(ogImage);
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>{pageTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

{noIndex
  ? <meta name="robots" content="noindex,nofollow" />
  : <meta name="robots" content="index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1" />
}

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="sitemap" href="/sitemap-index.xml" />

<link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />
<link rel="dns-prefetch" href="https://www.googletagmanager.com" />
<link rel="dns-prefetch" href="https://blog.getbeton.ai" />
<link rel="dns-prefetch" href="https://docs.getbeton.ai" />
<link rel="dns-prefetch" href="https://inspector.getbeton.ai" />

<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content="#000000" media="(prefers-color-scheme: light)" />
<meta name="theme-color" content="#0a0a0a" media="(prefers-color-scheme: dark)" />

<link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />
<link rel="preload" href="/fonts/cal-sans-semibold.woff2" as="font" type="font/woff2" crossorigin />

<OpenGraph
  title={pageTitle}
  description={description}
  image={ogImageUrl}
  url={canonicalUrl}
  type={type}
/>

<SchemaOrg
  type={schemaType}
  title={pageTitle}
  description={description}
  url={canonicalUrl}
  faqData={faqData}
  breadcrumbs={breadcrumbs}
  reviewData={reviewData}
  personData={personData}
/>

<GTM />
