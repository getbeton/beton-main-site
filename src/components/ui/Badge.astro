---
interface Props {
  variant?: 'default' | 'primary' | 'accent';
  class?: string;
}

const { variant = 'default', class: className } = Astro.props;

const variantClasses = {
  default: 'bg-[var(--color-neutral-100)] text-[var(--color-text-secondary)]',
  primary: 'bg-[var(--color-primary-bg)] text-[var(--color-primary-600)]',
  accent: 'bg-[var(--color-accent-bg)] text-[var(--color-accent-fg)]',
};
---

<span
  class:list={[
    'inline-flex items-center px-2.5 py-0.5 border-2 text-xs font-bold uppercase tracking-wider',
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</span>
