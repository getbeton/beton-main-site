---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block bg-[var(--color-surface-raised)] border-2 border-[var(--color-text)] p-6 shadow-[var(--shadow-card)] transition-all duration-150',
    href && 'hover:shadow-[8px_8px_0_var(--color-text)] hover:-translate-x-1 hover:-translate-y-1',
    className,
  ]}
>
  <slot />
</Tag>
