---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block bg-[var(--color-surface-raised)] border-2 border-[var(--color-text)] p-6 shadow-[var(--shadow-card)]',
    href && 'hover:shadow-[6px_6px_0_var(--color-text)] hover:-translate-x-0.5 hover:-translate-y-0.5',
    className,
  ]}
>
  <slot />
</Tag>
