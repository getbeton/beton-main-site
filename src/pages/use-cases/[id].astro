---
import { getCollection, render } from 'astro:content';
import ContentLayout from '../../layouts/ContentLayout.astro';
import Container from '../../components/ui/Container.astro';
import CTASection from '../../components/shared/CTASection.astro';
import Button from '../../components/ui/Button.astro';
import { SITE } from '../../utils/site';

export async function getStaticPaths() {
  const useCases = await getCollection('use-cases');
  return useCases.map((uc) => ({
    params: { id: uc.id },
    props: { entry: uc },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const { title, subtitle, description, problem, solution, benefits, seo } = entry.data;

const relatedUseCases = (await getCollection('use-cases'))
  .filter((uc) => uc.id !== entry.id)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 4);

const relatedIntegrations = entry.data.integrations?.length
  ? (await getCollection('integrations')).filter((i) => entry.data.integrations.includes(i.data.slug))
  : [];

const breadcrumbs = [
  { name: 'Home', url: SITE.url },
  { name: 'Use Cases', url: `${SITE.url}/use-cases/` },
  { name: title, url: `${SITE.url}/use-cases/${entry.id}/` },
];
---

<ContentLayout
  title={title}
  subtitle={subtitle}
  description={seo?.metaDescription || description}
  canonicalPath={`/use-cases/${entry.id}`}
  breadcrumbs={breadcrumbs}
>
  <!-- Structured sections -->
  <div class="mb-6 p-4 bg-[var(--color-surface-raised)] border-2 border-[var(--color-border)]">
    <h2 class="text-lg font-[family-name:var(--font-heading)] mb-2">The Problem</h2>
    <p class="text-[var(--color-text-secondary)]">{problem}</p>
  </div>

  <div class="mb-6 p-4 bg-[var(--color-surface-raised)] border-2 border-[var(--color-border)]">
    <h2 class="text-lg font-[family-name:var(--font-heading)] mb-2">The Solution</h2>
    <p class="text-[var(--color-text-secondary)]">{solution}</p>
  </div>

  {benefits.length > 0 && (
    <div class="mb-6">
      <h2 class="text-lg font-[family-name:var(--font-heading)] mb-2">Key Benefits</h2>
      <ul class="space-y-2">
        {benefits.map((benefit) => (
          <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
            <svg class="w-5 h-5 text-[var(--color-accent-500)] shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"></path>
            </svg>
            {benefit}
          </li>
        ))}
      </ul>
    </div>
  )}

  <!-- Markdown body -->
  <Content />

  <!-- Inline CTA -->
  <div class="mt-10 p-6 border-2 border-[var(--color-primary-600)] bg-[var(--color-surface-accent-primary)]">
    <h3 class="text-lg font-[family-name:var(--font-heading)] mb-2">Ready to get started?</h3>
    <p class="text-sm text-[var(--color-text-secondary)] mb-4">
      Set up {title.toLowerCase()} detection in minutes. Free forever for self-hosted.
    </p>
    <div class="flex flex-col sm:flex-row gap-3">
      <Button href={SITE.external.app} size="lg" data-track-cta={`use-case-${entry.id}-inline`}>
        Get Started Free
      </Button>
      <Button href="/industries/" variant="outline" size="md">
        Browse Industries
      </Button>
    </div>
  </div>
</ContentLayout>

<CTASection
  headline={`Start ${title} with Beton`}
  description="Connect your product analytics and start detecting buying signals today."
  secondaryCta={{ label: 'Browse Industries', href: '/industries/' }}
  trackId={`use-case-${entry.id}-cta`}
/>

{relatedIntegrations.length > 0 && (
  <section class="py-10 lg:py-16 border-t-2 border-[var(--color-border)]">
    <Container>
      <h2 class="text-xl sm:text-2xl font-[family-name:var(--font-heading)] tracking-wide text-center mb-8">
        Works With
      </h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
        {relatedIntegrations.map((integration) => (
          <a
            href={`/integrations/${integration.data.slug}/`}
            class="flex flex-col items-center gap-2 p-4 border-2 border-[var(--color-text)] shadow-[var(--shadow-card)] hover:shadow-[6px_6px_0_var(--color-text)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
          >
            <img
              src={integration.data.logo}
              alt={integration.data.name}
              width="32"
              height="32"
              loading="lazy"
              class="w-8 h-8 object-contain logo-adaptive"
            />
            <span class="text-xs font-medium text-[var(--color-text)]">{integration.data.name}</span>
          </a>
        ))}
      </div>
    </Container>
  </section>
)}

{relatedUseCases.length > 0 && (
  <section class="py-10 lg:py-16 border-t-2 border-[var(--color-border)]">
    <Container>
      <h2 class="text-xl sm:text-2xl font-[family-name:var(--font-heading)] tracking-wide text-center mb-8">
        Related Use Cases
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        {relatedUseCases.map((uc) => (
          <a
            href={`/use-cases/${uc.id}/`}
            class="block p-5 border-2 border-[var(--color-text)] shadow-[var(--shadow-card)] hover:shadow-[6px_6px_0_var(--color-text)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
          >
            <h3 class="text-sm font-bold mb-1">{uc.data.title}</h3>
            <p class="text-xs text-[var(--color-text-secondary)] leading-relaxed">{uc.data.subtitle}</p>
          </a>
        ))}
      </div>
    </Container>
  </section>
)}
