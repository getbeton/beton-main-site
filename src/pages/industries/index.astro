---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Heading from '../../components/ui/Heading.astro';
import IndustryCard from '../../components/content/IndustryCard.astro';
import CTASection from '../../components/shared/CTASection.astro';
import { SITE } from '../../utils/site';

const industries = (await getCollection('industries')).sort(
  (a, b) => a.data.order - b.data.order
);

const breadcrumbs = [
  { name: 'Home', url: SITE.url },
  { name: 'Industries', url: `${SITE.url}/industries/` },
];
---

<PageLayout
  title="Industries"
  description="Revenue intelligence for every industry. See how Beton helps SaaS, DevTools, Fintech, HealthTech, and Marketplace teams."
  breadcrumbs={breadcrumbs}
>
  <Section>
    <Container>
      <div class="text-center mb-12 lg:mb-16">
        <Heading as="h1">Industries</Heading>
        <p class="mt-4 text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
          Revenue intelligence tailored to your industry's unique signals and challenges. Explore our <a href="/use-cases/" class="text-[var(--color-primary-600)] hover:underline">use cases</a> and <a href="/pricing/" class="text-[var(--color-primary-600)] hover:underline">pricing</a> to get started.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {industries.map((industry, i) => (
          <IndustryCard industry={industry} index={i} />
        ))}
      </div>
    </Container>
  </Section>

  <CTASection
    headline="Revenue Intelligence for Your Industry"
    description="Every industry has unique buying signals. Beton detects the ones that matter."
    trackId="industries-cta"
  />
</PageLayout>
