---
import { getCollection, render } from 'astro:content';
import ContentLayout from '../../layouts/ContentLayout.astro';
import Container from '../../components/ui/Container.astro';
import CTASection from '../../components/shared/CTASection.astro';
import Button from '../../components/ui/Button.astro';
import { SITE } from '../../utils/site';

export async function getStaticPaths() {
  const industries = await getCollection('industries');
  return industries.map((ind) => ({
    params: { id: ind.id },
    props: { entry: ind },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const { title, subtitle, description, challenges, signals, outcomes, seo } = entry.data;

const otherIndustries = (await getCollection('industries'))
  .filter((ind) => ind.id !== entry.id)
  .sort((a, b) => a.data.order - b.data.order);

const relatedUCs = entry.data.relatedUseCases?.length
  ? (await getCollection('use-cases')).filter((uc) => entry.data.relatedUseCases.includes(uc.id))
  : [];

const breadcrumbs = [
  { name: 'Home', url: SITE.url },
  { name: 'Industries', url: `${SITE.url}/industries/` },
  { name: title, url: `${SITE.url}/industries/${entry.id}/` },
];
---

<ContentLayout
  title={title}
  headTitle={seo?.metaTitle}
  subtitle={subtitle}
  description={seo?.metaDescription || description}
  canonicalPath={`/industries/${entry.id}`}
  breadcrumbs={breadcrumbs}
>
  <!-- Challenges -->
  {challenges.length > 0 && (
    <div class="mb-6">
      <h2 class="text-lg font-[family-name:var(--font-heading)] mb-3">Challenges</h2>
      <ul class="space-y-2">
        {challenges.map((challenge) => (
          <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
            <svg class="w-5 h-5 text-[var(--color-neutral-400)] shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"></path>
            </svg>
            {challenge}
          </li>
        ))}
      </ul>
    </div>
  )}

  <!-- Signals -->
  {signals.length > 0 && (
    <div class="mb-6 p-4 bg-[var(--color-surface-raised)] border-2 border-[var(--color-border)]">
      <h2 class="text-lg font-[family-name:var(--font-heading)] mb-2">Signals Beton Detects</h2>
      <ul class="space-y-2">
        {signals.map((signal) => (
          <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
            <svg class="w-5 h-5 text-[var(--color-primary-500)] shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"></path>
            </svg>
            {signal}
          </li>
        ))}
      </ul>
    </div>
  )}

  <!-- Outcomes -->
  {outcomes.length > 0 && (
    <div class="mb-6">
      <h2 class="text-lg font-[family-name:var(--font-heading)] mb-3">Expected Outcomes</h2>
      <ul class="space-y-2">
        {outcomes.map((outcome) => (
          <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
            <svg class="w-5 h-5 text-[var(--color-accent-500)] shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"></path>
            </svg>
            {outcome}
          </li>
        ))}
      </ul>
    </div>
  )}

  <!-- Markdown body -->
  <Content />

  <!-- Inline CTA -->
  <div class="mt-10 p-6 border-2 border-[var(--color-primary-600)] bg-[var(--color-surface-accent-primary)]">
    <h3 class="text-lg font-[family-name:var(--font-heading)] mb-2">Ready to get started?</h3>
    <p class="text-sm text-[var(--color-text-secondary)] mb-4">
      Start detecting {title.toLowerCase()} revenue signals. Free forever for self-hosted.
    </p>
    <div class="flex flex-col sm:flex-row gap-3">
      <Button href={SITE.external.app} size="lg" data-track-cta={`industry-${entry.id}-inline`}>
        Get Started Free
      </Button>
      <Button href="/use-cases/" variant="outline" size="md">
        Browse Use Cases
      </Button>
    </div>
  </div>
</ContentLayout>

<CTASection
  headline={`Beton for ${title}`}
  description={`Turn ${title.toLowerCase()} product signals into revenue opportunities.`}
  secondaryCta={{ label: 'Browse Use Cases', href: '/use-cases/' }}
  trackId={`industry-${entry.id}-cta`}
/>

{otherIndustries.length > 0 && (
  <section class="py-10 lg:py-16 border-t-2 border-[var(--color-border)]">
    <Container>
      <h2 class="text-xl sm:text-2xl font-[family-name:var(--font-heading)] tracking-wide text-center mb-8">
        Other Industries
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        {otherIndustries.map((ind) => (
          <a
            href={`/industries/${ind.id}/`}
            class="block p-5 border-2 border-[var(--color-text)] shadow-[var(--shadow-card)] hover:shadow-[6px_6px_0_var(--color-text)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
          >
            <h3 class="text-sm font-bold mb-1">{ind.data.title}</h3>
            <p class="text-xs text-[var(--color-text-secondary)] leading-relaxed">{ind.data.subtitle}</p>
          </a>
        ))}
      </div>
    </Container>
  </section>
)}

{relatedUCs.length > 0 && (
  <section class="py-10 lg:py-16 border-t-2 border-[var(--color-border)]">
    <Container>
      <h2 class="text-xl sm:text-2xl font-[family-name:var(--font-heading)] tracking-wide text-center mb-8">
        Related Use Cases
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        {relatedUCs.map((uc) => (
          <a
            href={`/use-cases/${uc.id}/`}
            class="block p-5 border-2 border-[var(--color-text)] shadow-[var(--shadow-card)] hover:shadow-[6px_6px_0_var(--color-text)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
          >
            <h3 class="text-sm font-bold mb-1">{uc.data.title}</h3>
            <p class="text-xs text-[var(--color-text-secondary)] leading-relaxed">{uc.data.subtitle}</p>
          </a>
        ))}
      </div>
    </Container>
  </section>
)}
