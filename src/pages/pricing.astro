---
import { getEntry, getCollection } from 'astro:content';
import PageLayout from '../layouts/PageLayout.astro';
import Container from '../components/ui/Container.astro';
import Section from '../components/ui/Section.astro';
import Heading from '../components/ui/Heading.astro';
import PricingTable from '../components/pricing/PricingTable.astro';
import PricingComparison from '../components/pricing/PricingComparison.astro';
import AddOnCard from '../components/pricing/AddOnCard.astro';
import PricingFAQ from '../components/pricing/PricingFAQ.astro';
import CTASection from '../components/shared/CTASection.astro';
import { SITE } from '../utils/site';

const page = await getEntry('pages', 'pricing');
const addons = await getCollection('pricing-addons');
const faqItems = (await getCollection('pricing-faq')).sort((a, b) => a.data.order - b.data.order);

const faqData = faqItems.map((item) => ({
  question: item.data.question,
  answer: item.data.answer,
}));

const breadcrumbs = [
  { name: 'Home', url: SITE.url },
  { name: 'Pricing', url: `${SITE.url}/pricing/` },
];
---

<PageLayout
  title={page?.data.title || 'Pricing'}
  description={page?.data.seo?.metaDescription}
  schemaType={page?.data.schemaType}
  faqData={faqData}
  breadcrumbs={breadcrumbs}
>
  <Section>
    <Container>
      <div class="text-center mb-12 lg:mb-16">
        <Heading as="h1">{page?.data.title || 'Pricing'}</Heading>
        {page?.data.subtitle && (
          <p class="mt-4 text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
            {page.data.subtitle}
          </p>
        )}
      </div>

      <PricingTable />
    </Container>
  </Section>

  <!-- Feature Comparison -->
  <Section id="compare" class="border-t border-[var(--color-border)]">
    <Container>
      <div class="text-center mb-10">
        <Heading as="h2">Compare Plans</Heading>
        <p class="mt-4 text-[var(--color-text-secondary)]">
          See exactly what's included in each plan.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <PricingComparison />
      </div>
    </Container>
  </Section>

  <!-- Add-ons -->
  <Section id="addons" class="border-t border-[var(--color-border)]">
    <Container>
      <div class="text-center mb-10">
        <Heading as="h2">Add-Ons</Heading>
        <p class="mt-4 text-[var(--color-text-secondary)]">
          Enterprise features available for teams with advanced needs.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-4 max-w-4xl mx-auto">
        {addons.map((addon) => (
          <AddOnCard addon={addon.data} />
        ))}
      </div>
    </Container>
  </Section>

  <!-- FAQ -->
  <Section id="faq" class="border-t border-[var(--color-border)]">
    <Container>
      <PricingFAQ />
    </Container>
  </Section>

  <CTASection
    headline="Start Free, Scale When Ready"
    description="Free forever for self-hosted. No credit card required."
    trackId="pricing-cta"
  />
</PageLayout>
