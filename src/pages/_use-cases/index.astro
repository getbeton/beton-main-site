---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Heading from '../../components/ui/Heading.astro';
import UseCaseCard from '../../components/content/UseCaseCard.astro';
import CTASection from '../../components/shared/CTASection.astro';
import { SITE } from '../../utils/site';

const useCases = (await getCollection('use-cases')).sort(
  (a, b) => a.data.order - b.data.order
);

const breadcrumbs = [
  { name: 'Home', url: SITE.url },
  { name: 'Use Cases', url: `${SITE.url}/use-cases/` },
];
---

<PageLayout
  title="Use Cases"
  description="See how teams use Beton to turn product signals into revenue. From PLG conversion to churn prevention."
  breadcrumbs={breadcrumbs}
>
  <Section>
    <Container>
      <div class="text-center mb-12 lg:mb-16">
        <Heading as="h1">Use Cases</Heading>
        <p class="mt-4 text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
          Discover how Beton helps revenue teams detect and act on behavioral signals.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {useCases.map((uc, i) => (
          <UseCaseCard useCase={uc} index={i} />
        ))}
      </div>
    </Container>
  </Section>

  <CTASection
    headline="Find the Right Signal for Your Team"
    description="Connect your product analytics and start detecting buying signals in minutes."
    trackId="use-cases-cta"
  />
</PageLayout>
