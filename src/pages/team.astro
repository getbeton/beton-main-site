---
import { getCollection } from 'astro:content';
import PageLayout from '../layouts/PageLayout.astro';
import Container from '../components/ui/Container.astro';
import Section from '../components/ui/Section.astro';
import Heading from '../components/ui/Heading.astro';
import TeamCard from '../components/team/TeamCard.astro';
import CTASection from '../components/shared/CTASection.astro';
import { SITE } from '../utils/site';

const members = (await getCollection('team')).sort(
  (a, b) => a.data.order - b.data.order
);

const breadcrumbs = [
  { name: 'Home', url: SITE.url },
  { name: 'Team', url: `${SITE.url}/team/` },
];
---

<PageLayout
  title="Meet the Team"
  description="Meet the team behind Beton, building open-source revenue intelligence."
  breadcrumbs={breadcrumbs}
>
  <Section>
    <Container>
      <div class="text-center mb-12 lg:mb-16">
        <Heading as="h1">Our Team</Heading>
        <p class="mt-4 text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
          Building open-source revenue intelligence.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {members.map((member) => (
          <TeamCard member={member} />
        ))}
      </div>
    </Container>
  </Section>

  <CTASection
    headline="Want to Work with Us?"
    description="We're building the future of revenue intelligence. Join our open-source community."
    secondaryCta={{ label: 'View on GitHub', href: 'https://github.com/getbeton' }}
    trackId="team-cta"
  />
</PageLayout>
