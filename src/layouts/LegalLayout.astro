---
import PageLayout from './PageLayout.astro';

interface Props {
  title: string;
  description?: string;
  canonicalPath?: string;
  breadcrumbs?: { name: string; url: string }[];
}

const { title, description, canonicalPath, breadcrumbs } = Astro.props;
---

<PageLayout title={title} description={description} canonicalPath={canonicalPath} breadcrumbs={breadcrumbs}>
  <article class="py-12 lg:py-20">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
      <h1 class="text-2xl sm:text-3xl font-[family-name:var(--font-heading)] tracking-tight mb-8">
        {title}
      </h1>
      <div class="prose">
        <slot />
      </div>
    </div>
  </article>
</PageLayout>
