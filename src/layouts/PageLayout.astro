---
import BaseLayout from './BaseLayout.astro';
import SkipLink from '../components/global/SkipLink.astro';
import Header from '../components/global/Header.astro';
import MobileMenu from '../components/global/MobileMenu.astro';
import Footer from '../components/global/Footer.astro';


interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalPath?: string;
  noIndex?: boolean;
  schemaType?: string;
  faqData?: { question: string; answer: string }[];
  breadcrumbs?: { name: string; url: string }[];
}

const { title, description, ogImage, canonicalPath, noIndex, schemaType, faqData, breadcrumbs } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalPath={canonicalPath}
  noIndex={noIndex}
  schemaType={schemaType}
  faqData={faqData}
  breadcrumbs={breadcrumbs}
>
  <SkipLink />
  <Header />
  <MobileMenu />
  <main id="main-content" class="flex-1">
    <slot />
  </main>
  <Footer />
</BaseLayout>
